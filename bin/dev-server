#!/usr/bin/env python
import sys
import os
import os.path

from flask import Request

sys.path.insert(0, os.path.join(os.path.dirname(__file__), '..'))

from control.webapp import app

class R(Request):
    trusted_hosts = {'localhost'}

app.request_class = R
app.secret_key = os.urandom(16)
app.run(debug=True, use_evalex=False)
